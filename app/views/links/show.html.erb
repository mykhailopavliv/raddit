<p>
  <strong>Title:</strong>
  <%= @link.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @link.url %>
</p>

<%= link_to 'Edit', edit_link_path(@link) %> |
<%= link_to 'Back', links_path %>

<%= link_to like_link_path(@link), method: :put do%>
  Upvote
  <%= @link.get_upvotes.size %>
<% end %>
<%= link_to dislike_link_path(@link), method: :put do%>
  Downvote
  <%= @link.get_downvotes.size %>
<% end %>
